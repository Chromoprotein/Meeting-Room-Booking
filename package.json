{
  "name": "meeting-room-booking",
  "private": true,
  "scripts": {
    "dev": "concurrently -n BACKEND,FRONTEND -c blue,green \"npm run backend\" \"npm run frontend\" \"npm run tailwind\"",
    "backend": "cd backend && python -m uvicorn main:app --reload --port 8000",
    "frontend": "cd frontend && npm start",
    "tailwind": "cd frontend && npx @tailwindcss/cli -i ./src/styles/input.css -o ./src/styles/output.css --watch"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
